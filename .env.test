# Testing Environment Configuration
ENVIRONMENT=test
DEBUG=true

# OpenAI Configuration
OPENAI_API_KEY=your_test_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.3
OPENAI_TIMEOUT=30

# Retry Configuration (fewer retries for tests)
MAX_RETRIES=1
RETRY_DELAY=0.5
RETRY_BACKOFF=1.5

# Application Settings
PORT=8001
MAX_DESCRIPTION_LENGTH=5000
LOG_LEVEL=DEBUG

# Knowledge Base
KB_PATH=kb/test_knowledge_base.json

# CORS
CORS_ORIGINS=["*"]
